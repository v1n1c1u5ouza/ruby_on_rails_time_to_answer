<h1>Listando Questões</h1>
 <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Descrição</th>
                <th>Assunto </th>

                <th>
                <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-sm" do %>
                    <i class="fas fa-plus"></i>  
                <% end %>
                </th>
            </tr>
        </thead>
        
        <tbody>
            <% @questions.each do |question|%>
                <tr>
                    <td><%= question.id %></td>
                    <td><%= question.description.truncate(50) %></td>
                    <td><%= question.subject.description.truncate(30)%></td>
                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle btn-sm" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>
                        <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: { confirm: "Deseja realmente excluir?" } do%>
	                        <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                </tr> 
            <%end%> 
        </tbody>
    </table>
    <div class=text-center>
        <%= paginate @questions%>
    </div>
</div>

