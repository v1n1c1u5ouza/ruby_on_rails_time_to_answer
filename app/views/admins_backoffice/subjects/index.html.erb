<h1>Listando Assuntos/√Åreas</h1>
 <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%= translate_field(@subjects, :description) %></th>
                <th>
                <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle btn-sm" do %>
                    <i class="fas fa-plus"></i>  
                <% end %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @subjects.each do |subject|%>
                <tr>
                    <td><%= subject.id %></td>
                    <td><%= subject.description %></td>
                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle btn-sm" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>
                        <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: { confirm: "Deseja realmente excluir?" } do%>
	                        <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                </tr> 
            <%end%> 
        </tbody>
    </table>
    <div class=text-center>
        <%= paginate @subjects%>
    </div>
</div>

